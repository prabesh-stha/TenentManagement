@model TenentManagement.Models.Property.Unit.UnitModel;
<a asp-action="RenterDetail" asp-controller="Unit" asp-route-id="@Model.Id" class="text-decoration-none">
    <div class="card shadow-sm" style="min-width: 250px;">
        <div class="card-body">
            <h4 class="card-title text-dark">@Model.Name</h4>
            <p class="card-text text-muted mb-1"><strong>Description:</strong> @Model.Description</p>
            <p class="card-text text-muted"><strong>Status:</strong> @(Model.IsVacant ? "Vacant" : "Occupied")</p>
        </div>
    </div>
</a>