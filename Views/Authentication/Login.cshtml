@using TenentManagement.Models.Authentication
@model LoginModel
@{
	ViewData["Title"] = "Login";
}

<div class="container py-5">
	<div class="card shadow-lg mx-auto rounded-corner" style="max-width: 500px;">
		<div class="card-header bg-primary text-white py-4 rounded-corner-top">
			<h1 class="h4 mb-0 text-center d-flex flex-column align-items-center">
				<span class="d-inline-flex align-items-center justify-content-center bg-opacity-25 bg-info text-white rounded-circle mb-2" style="width: 50px; height: 50px;">
					<i class="fas fa-building fa-lg"></i>
				</span>
				<span>Tenent Management System</span>

				<span class="mt-2 mb-0 text-center">
					<i class="bi bi-box-arrow-in-right me-2"></i>Account Login
				</span>
			</h1>
		</div>

		<div class="card-body p-4 rounded-corner">
			<form asp-action="Login" method="post" class="needs-validation" novalidate data-enable-spinner="true">
				<div class="mb-3">
					<label asp-for="Email" class="form-label small text-muted">Email Address *</label>
					<div class="input-group">
						<span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
						<input asp-for="Email" type="email" class="form-control" placeholder="your@email.com" autofocus required />
					</div>
					<span asp-validation-for="Email" class="text-danger small"></span>
				</div>

				<div class="mb-3">
					<label asp-for="Password" class="form-label small text-muted">Password *</label>
					<div class="input-group">
						<span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
						<input asp-for="Password" type="password" class="form-control" placeholder="••••••••" required />
						<button class="btn btn-outline-secondary toggle-password" type="button">
							<i class="bi bi-eye"></i>
						</button>
					</div>
					<span asp-validation-for="Password" class="text-danger small"></span>
				</div>
				<a asp-action="ForgotPassword" class="small text-muted">Forgot password?</a>

				<button type="submit" class="btn btn-primary w-100 py-2 mb-3 mt-4 rounded-corner" data-loading-text="Logging in...">
					<i class="bi bi-box-arrow-in-right me-2"></i>Login
				</button>

				<div class="text-center small mt-4">
					Don't have an account? <a asp-action="Register" class="text-primary">Register here</a>
				</div>
			</form>
		</div>
	</div>
</div>