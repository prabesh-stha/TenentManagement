@using TenentManagement.Models.Authentication
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="container py-5">
    <div class="card shadow-lg mx-auto" style="max-width: 500px;">
        <div class="card-header bg-primary text-white py-4">
            <h2 class="h4 mb-0 text-center">
                <i class="bi bi-person-fill-lock me-2"></i>Change Password
            </h2>
        </div>

        <div class="card-body p-4">
            <form asp-action="ChangePassword" method="post" class="needs-validation" novalidate data-enable-spinner="true">

                <div class="mb-3">
                    <label asp-for="CurrentPassword" class="form-label small text-muted">Current Password *</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                        <input asp-for="CurrentPassword" type="password" class="form-control" placeholder="••••••••" required />
                        <button class="btn btn-outline-secondary toggle-password" type="button">
                            <i class="bi bi-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label small text-muted">New Password *</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                        <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" required />
                        <button class="btn btn-outline-secondary toggle-password" type="button">
                            <i class="bi bi-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="ConfirmPassword" class="form-label small text-muted">Confirm Password *</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-shield-lock-fill"></i></span>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="••••••••" required />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2" data-loading-text="Changing password...">
                    <i class="bi bi-check-circle-fill me-2"></i>Change Password
                </button>

                <div class="text-center small mt-4">
                    <a asp-action="ForgotPassword" class="small text-muted">Forgot password?</a>
                </div>
            </form>
        </div>
    </div>
</div>
