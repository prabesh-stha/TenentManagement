@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container py-5">
    <div class="card shadow-lg mx-auto" style="max-width: 500px;">
        <div class="card-header bg-primary text-white py-4">
            <h2 class="h4 mb-0 text-center">
                <i class="bi bi-question-circle-fill me-2"></i>Reset Password
            </h2>
        </div>

        <div class="card-body p-4">
            <form asp-action="ForgotPassword" method="post" class="needs-validation" novalidate data-enable-spinner="true">
                <div class="mb-4">
                    <label class="form-label small text-muted">Email Address *</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                        <input name="email" type="email" class="form-control" placeholder="your@email.com" required />
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2" data-loading-text="Sending...">
                    <i class="bi bi-send-fill me-2"></i>Send Reset Link
                </button>

                <div class="text-center small mt-4">
                    Remember your password? <a asp-action="Login" class="text-primary">Login here</a>
                </div>
            </form>
        </div>
    </div>
</div>