@using TenentManagement.Models.Authentication
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="container py-5">
    <div class="card shadow-lg mx-auto" style="max-width: 500px;">
        <div class="card-header bg-primary text-white py-4">
            <h2 class="h4 mb-0 text-center">
                <i class="bi bi-key-fill me-2"></i>Create New Password
            </h2>
        </div>

        <div class="card-body p-4">
            <form asp-action="ResetPassword" method="post" class="needs-validation" novalidate data-enable-spinner="true">
                <input type="hidden" asp-for="Token" />

                <div class="mb-3">
                    <label asp-for="Password" class="form-label small text-muted">New Password *</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                        <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" required />
                        <button class="btn btn-outline-secondary toggle-password" type="button">
                            <i class="bi bi-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="ConfirmPassword" class="form-label small text-muted">Confirm Password *</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-shield-lock-fill"></i></span>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="••••••••" required />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2" data-loading-text="Resetting...">
                    <i class="bi bi-check-circle-fill me-2"></i>Update Password
                </button>
            </form>
        </div>
    </div>
</div>
