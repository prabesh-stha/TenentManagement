@model TenentManagement.Models.Property.Unit.UnitModel
@{
    ViewData["Title"] = "Add Unit";
}

<div class="container mt-5">
    <div class="card shadow-lg mx-auto" style="max-width: 700px;">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-house-add me-2"></i>Add Unit</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create" method="post" class="needs-validation" novalidate data-enable-spinner="true">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Unit Name *</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter unit name" required />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description *</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Unit description" required></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="RentAmount" class="form-label">Rent Amount *</label>
                    <input asp-for="RentAmount" type="number" step="0.01" class="form-control" placeholder="e.g., 12000" required />
                    <span asp-validation-for="RentAmount" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="RentStartDate" class="form-label">Rent Start Date</label>
                    <input asp-for="RentStartDate" type="date" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="RentEndDate" class="form-label">Rent End Date</label>
                    <input asp-for="RentEndDate" type="date" class="form-control" />
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="IsVacant" class="form-check-input" type="checkbox" />
                    <label asp-for="IsVacant" class="form-check-label">Is Vacant</label>
                </div>

                   <input type="hidden" asp-for="PropertyId" />

                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-plus-circle me-2"></i>Create Unit
                </button>
            </form>
        </div>
    </div>
</div>
