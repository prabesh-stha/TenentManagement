@model TenentManagement.ViewModel.RenterDetailViewModel

@{
    ViewData["Title"] = "Rented Unit Detail";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-house-heart-fill me-2"></i>@Model.UnitName</h4>
            <span class="badge bg-light text-dark">Rs. @Model.RentAmount.ToString("F2")</span>
        </div>

        <div class="card-body">
            <h5 class="text-muted mb-3">Rental Period</h5>
            <p><strong>Start:</strong> @Model.RentStartDate.ToLongDateString()</p>
            <p><strong>End:</strong> @Model.RentEndDate.ToLongDateString()</p>

            <hr />
            <h5 class="text-muted mb-3">Property Information</h5>
            <p><strong>Property Name:</strong> @Model.PropertyName</p>
            <p><strong>Address:</strong> @Model.PropertyAddress</p>
            <p><strong>Type:</strong> @Model.PropertyType</p>
            <p><strong>Description:</strong> @Model.PropertyDescription</p>
            <p>
                <strong>Map:</strong>
                <a href="https://www.openstreetmap.org/?mlat=@Model.PropertyLatitude&mlon=@Model.PropertyLongitude&zoom=18" target="_blank">
                    <i class="bi bi-geo-alt-fill me-1"></i>View on Map
                </a>
            </p>

            <hr />
            <h5 class="text-muted mb-3">Owner Information</h5>
            <p><strong>Name:</strong> @Model.OwnerFirstName @Model.OwnerLastName</p>
            <p><strong>Email:</strong> @Model.OwnerEmail</p>
            <p><strong>Phone:</strong> @Model.OwnerPhoneNumber</p>
        </div>

        <div class="card-footer text-end bg-light">
            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i> Back to Rented Units
            </a>
        </div>
    </div>
</div>
