@using TenentManagement.Models.Property
@model PropertyModel

@{
    ViewData["Title"] = "Delete Property";
}

<div class="container py-5">
    <div class="card shadow-lg mx-auto rounded-corner" style="max-width: 500px;">
        <div class="card-header bg-danger text-white py-4 rounded-corner-top text-center">
            <h1 class="h4 mb-0"><i class="bi bi-trash-fill me-2"></i>Delete Property</h1>
        </div>

        <div class="card-body p-4">
            <h5>Are you sure you want to delete this property?</h5>

            <dl class="row">
                <dt class="col-sm-4">Name:</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4">Address:</dt>
                <dd class="col-sm-8">@Model.Address</dd>

                <dt class="col-sm-4">Description:</dt>
                <dd class="col-sm-8">@Model.Description</dd>
            </dl>

            <form asp-action="DeleteConfirmed" asp-action="Property" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger w-100 py-2 rounded-corner">Delete</button>
            </form>

            <div class="text-center small mt-4">
                <a asp-action="Index" asp-controller="Home" class="text-muted text-decoration-none">← Cancel and go back</a>
            </div>
        </div>
    </div>
</div>
