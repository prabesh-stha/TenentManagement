@model TenentManagement.ViewModel.PaymentInvoiceListViewModel
@using TenentManagement.Services.Utilities
@{
    ViewData["Title"] = "All Invoices";
    var activeTab = ViewBag.ActiveTab ?? "owned";
    var userId = Context.Session.GetInt32("UserId");
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="me-1">All Invoices</h2>
        <a class="btn btn-outline-primary" asp-action="PropertySelection" asp-controller="Property">
            <i class="bi bi-plus"></i> Create New Invoice
        </a>
    </div>

    <!-- Filter Form -->
    <form method="get" asp-action="AllInvoice" class="card mb-4 shadow-sm">
        <div class="card-body">
            <input type="hidden" name="id" value="@userId" />
            <input type="hidden" name="tab" value="@activeTab" />

            <div class="row g-3">
                <!-- Date Range Filters -->
                <div class="col-md-3">
                    <label class="form-label">From Month</label>
                    <input type="month" class="form-control" name="fromMonth"
                           value="@Context.Request.Query["fromMonth"]">
                </div>

                <div class="col-md-3">
                    <label class="form-label">To Month</label>
                    <input type="month" class="form-control" name="toMonth"
                           value="@Context.Request.Query["toMonth"]">
                </div>

                <!-- Due Date Filter -->
                <div class="col-md-2">
                    <label class="form-label">Due Date</label>
                    <select class="form-select" name="dueDate">
                        <option value="all" selected="@(Context.Request.Query["dueDate"] == "all")">All</option>
                        <option value="overdue" selected="@(Context.Request.Query["dueDate"] == "overdue")">Overdue</option>
                        <option value="upcoming" selected="@(Context.Request.Query["dueDate"] == "upcoming")">Upcoming</option>
                        <option value="today" selected="@(Context.Request.Query["dueDate"] == "today")">Today</option>
                    </select>
                </div>

                <!-- Status Filter -->
                <div class="col-md-2">
                    <label class="form-label">Status</label>
                    <select class="form-select" name="status">
                        <option value="all" selected="@(Context.Request.Query["status"] == "all")">All</option>
                        <option value="PAID" selected="@(Context.Request.Query["status"] == "PAID")">Paid</option>
                        <option value="PENDING" selected="@(Context.Request.Query["status"] == "PENDING")">Pending</option>
                        <option value="UNPAID" selected="@(Context.Request.Query["status"] == "UNPAID")">Unpaid</option>
                    </select>
                </div>

                <!-- Verified Filter -->
                <div class="col-md-2">
                    <label class="form-label">Verified</label>
                    <select class="form-select" name="verified">
                        <option value="all" selected="@(Context.Request.Query["verified"] == "all")">All</option>
                        <option value="true" selected="@(Context.Request.Query["verified"] == "true")">Verified</option>
                        <option value="false" selected="@(Context.Request.Query["verified"] == "false")">Not Verified</option>
                    </select>
                </div>

                <!-- Payment Method Filter -->
                <div class="col-md-2">
                    <label class="form-label">Payment Method</label>
                    <select class="form-select" name="paymentMethod">
                        <option value="all" selected="@(Context.Request.Query["paymentMethod"] == "all")">All</option>
                        @foreach (var method in Model.PaymentInvoices?.Select(i => i.PaymentMethod).Distinct() ?? Enumerable.Empty<string>())
                        {
                            <option value="@method" selected="@(Context.Request.Query["paymentMethod"] == method)">@method</option>
                        }
                    </select>
                </div>

                <!-- Action Buttons -->
                <div class="col-12 text-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-funnel me-1"></i> Apply Filters
                    </button>
                    <a asp-action="AllInvoice"
                       asp-route-id="@userId"
                       asp-route-tab="@activeTab"
                       class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-counterclockwise me-1"></i> Reset
                    </a>
                </div>
            </div>
        </div>
    </form>

    <!-- Tab Navigation -->
    <ul class="nav nav-tabs mb-4" id="invoiceTabs">
        <li class="nav-item">
            <a class="nav-link @(activeTab == "owned" ? "active" : "")"
               asp-action="AllInvoice"
               asp-route-id="@userId"
               asp-route-tab="owned"
               asp-route-fromMonth="@Context.Request.Query["fromMonth"]"
               asp-route-toMonth="@Context.Request.Query["toMonth"]"
               asp-route-dueDate="@Context.Request.Query["dueDate"]"
               asp-route-status="@Context.Request.Query["status"]"
               asp-route-verified="@Context.Request.Query["verified"]"
               asp-route-paymentMethod="@Context.Request.Query["paymentMethod"]">
                <i class="bi bi-house-check me-1"></i> Owned
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(activeTab == "rented" ? "active" : "")"
               asp-action="AllInvoice"
               asp-route-id="@userId"
               asp-route-tab="rented"
               asp-route-fromMonth="@Context.Request.Query["fromMonth"]"
               asp-route-toMonth="@Context.Request.Query["toMonth"]"
               asp-route-dueDate="@Context.Request.Query["dueDate"]"
               asp-route-status="@Context.Request.Query["status"]"
               asp-route-verified="@Context.Request.Query["verified"]"
               asp-route-paymentMethod="@Context.Request.Query["paymentMethod"]">
                <i class="bi bi-house-door me-1"></i> Rented
            </a>
        </li>
    </ul>

    <!-- Invoice Table -->
    <div class="tab-content">
        <div class="tab-pane fade show active">
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="align-middle" rowspan="2">SN</th>
                                    <th class="align-middle" rowspan="2">Invoice #</th>
                                    <th class="align-middle" rowspan="2">@(Model.IsOwner ? "Tenant" : "Owner")</th>
                                    <th colspan="2" class="text-center">Period</th>
                                    <th class="align-middle text-end" rowspan="2">Amount</th>
                                    <th class="align-middle" rowspan="2">Status</th>
                                    <th class="align-middle" rowspan="2">Method</th>
                                    <th class="align-middle" rowspan="2">Created</th>
                                    <th class="align-middle" rowspan="2">Due Date</th>
                                    <th class="align-middle text-center" rowspan="2">Verified</th>
                                    <th class="align-middle" rowspan="2">Verified At</th>
                                    <th class="align-middle" rowspan="2">Updated At</th>
                                    <th class="align-middle" rowspan="2">Owner Remark</th>
                                    <th class="align-middle" rowspan="2">Renter Remark</th>
                                    <th class="align-middle text-end" rowspan="2">Actions</th>
                                </tr>
                                <tr>
                                    <th>From</th>
                                    <th>To</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.PaymentInvoices.Any())
                                {
                                    int serialNumber = 1 + (Model.CurrentPage - 1) * 10;
                                    foreach (var invoice in Model.PaymentInvoices)
                                    {
                                        <tr>
                                            <td class="text-center">@serialNumber</td>
                                            <td class="fw-semibold">@invoice.Id</td>
                                            <td class="text-nowrap">@(Model.IsOwner? invoice.RenterName.ToTitleCase() : invoice.OwnerName.ToTitleCase())</td>
                                            <td class="text-nowrap">@invoice.FromMonth.ToString("MMM yyyy")</td>
                                            <td class="text-nowrap">@invoice.ToMonth.ToString("MMM yyyy")</td>
                                            <td class="text-end">@invoice.AmountDue.ToString("N2")</td>
                                            <td>
                                                @{
                                                    var badgeClass = invoice.Status switch
                                                    {
                                                        "PAID" => "bg-success",
                                                        "PENDING" => "bg-warning",
                                                        "UNPAID" => "bg-danger",
                                                        _ => "bg-secondary"
                                                    };
                                                }
                                                <span class="badge @badgeClass">@invoice.Status</span>
                                            </td>
                                            <td>@invoice.PaymentMethod</td>
                                            <td class="text-nowrap">@invoice.CreatedAt.ToString("d MMM yyyy")</td>
                                            <td class="text-nowrap @(DateTime.UtcNow > invoice.DueDate ? "text-danger" : "")">
                                                @invoice.DueDate.ToString("d MMM yyyy")
                                            </td>
                                            <td class="text-center">
                                                @if (invoice.IsVerified)
                                                {
                                                    <span class="badge bg-success text-white">✓</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger text-white">✗</span>
                                                }
                                            </td>
                                            <td class="text-nowrap">
                                                @(invoice.VerifiedAt?.ToString("d MMM yyyy") ?? "-")
                                            </td>
                                            <td class="text-nowrap">
                                                @(invoice.UpdatedAt?.ToString("d MMM yyyy") ?? "-")
                                            </td>
                                            <td class="text-truncate" style="max-width: 150px;" title="@invoice.OwnerRemark">
                                                @invoice.OwnerRemark
                                            </td>
                                            <td class="text-truncate" style="max-width: 150px;" title="@invoice.RenterRemark">
                                                @invoice.RenterRemark
                                            </td>
                                            <td class="text-end text-nowrap">
                                                @if (invoice.IsVerified)
                                                {
                                                    <a asp-controller="PaymentInvoice"
                                                       asp-action="Detail"
                                                       asp-route-id="@invoice.Id"
                                                       asp-route-all="true"
                                                       class="btn btn-outline-primary btn-sm"
                                                       title="Invoice Detail">
                                                        <i class="bi bi-file-earmark-text"></i>
                                                    </a>
                                                }
                                                else
                                                {
                                                    @if (Model.IsOwner)
                                                    {
                                                        @if (invoice.Status == "PENDING")
                                                        {
                                                            <a asp-controller="PaymentInvoice"
                                                               asp-action="ValidatePayment"
                                                               asp-route-id="@invoice.Id"
                                                               asp-route-all="true"
                                                               class="btn btn-outline-warning"
                                                               title="Validate Payment"
                                                               aria-label="Validate Payment"
                                                               data-bs-toggle="tooltip">
                                                                <i class="bi bi-cash" aria-hidden="true"></i>
                                                            </a>
                                                        }
                                                        else if (!invoice.IsVerified)
                                                        {
                                                            <div class="btn-group" role="group" aria-label="Invoice actions">

                                                                <a asp-controller="PaymentInvoice"
                                                                   asp-action="Edit"
                                                                   asp-route-id="@invoice.Id"
                                                                   asp-route-all="true"
                                                                   class="btn btn-outline-primary btn-sm"
                                                                   title="Edit Invoice"
                                                                   aria-label="Edit Invoice"
                                                                   data-bs-toggle="tooltip">
                                                                    <i class="bi bi-pencil-square" aria-hidden="true"></i>
                                                                </a>

                                                                <button type="button"
                                                                        class="btn btn-outline-danger btn-sm"
                                                                        onclick="confirmDeletion('PaymentInvoice', @invoice.Id, '/PaymentInvoice/Delete')"
                                                                        title="Delete Invoice"
                                                                        aria-label="Delete Invoice"
                                                                        data-bs-toggle="tooltip">
                                                                    <i class="bi bi-trash" aria-hidden="true"></i>
                                                                </button>
                                                            </div>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        @if (invoice.Status == "UNPAID")
                                                        {
                                                            <div class="btn-group" role="group">
                                                                <a asp-controller="PaymentInvoice"
                                                                   asp-action="RenterInvoicePayment"
                                                                   asp-route-id="@invoice.Id"
                                                                   asp-route-all="true"
                                                                   class="btn btn-outline-primary btn-sm"
                                                                   title="Pay Invoice">
                                                                    <i class="bi bi-pencil-square"></i>
                                                                </a>
                                                            </div>
                                                        }
                                                    }
                                                }
                                            </td>
                                        </tr>
                                        serialNumber++;
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="16" class="text-center py-4 text-muted">
                                            <i class="bi bi-file-earmark-excel me-2"></i> No invoices found
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="AllInvoice"
                       asp-route-id="@userId"
                       asp-route-tab="@activeTab"
                       asp-route-page="@(Model.CurrentPage - 1)"
                       asp-route-fromMonth="@Context.Request.Query["fromMonth"]"
                       asp-route-toMonth="@Context.Request.Query["toMonth"]"
                       asp-route-dueDate="@Context.Request.Query["dueDate"]"
                       asp-route-status="@Context.Request.Query["status"]"
                       asp-route-verified="@Context.Request.Query["verified"]"
                       asp-route-paymentMethod="@Context.Request.Query["paymentMethod"]">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                </li>

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link"
                           asp-action="AllInvoice"
                           asp-route-id="@userId"
                           asp-route-tab="@activeTab"
                           asp-route-page="@i"
                           asp-route-fromMonth="@Context.Request.Query["fromMonth"]"
                           asp-route-toMonth="@Context.Request.Query["toMonth"]"
                           asp-route-dueDate="@Context.Request.Query["dueDate"]"
                           asp-route-status="@Context.Request.Query["status"]"
                           asp-route-verified="@Context.Request.Query["verified"]"
                           asp-route-paymentMethod="@Context.Request.Query["paymentMethod"]">
                            @i
                        </a>
                    </li>
                }

                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="AllInvoice"
                       asp-route-id="@userId"
                       asp-route-tab="@activeTab"
                       asp-route-page="@(Model.CurrentPage + 1)"
                       asp-route-fromMonth="@Context.Request.Query["fromMonth"]"
                       asp-route-toMonth="@Context.Request.Query["toMonth"]"
                       asp-route-dueDate="@Context.Request.Query["dueDate"]"
                       asp-route-status="@Context.Request.Query["status"]"
                       asp-route-verified="@Context.Request.Query["verified"]"
                       asp-route-paymentMethod="@Context.Request.Query["paymentMethod"]">
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    }
</div>