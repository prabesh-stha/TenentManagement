            previewBtn.disabled = true;

            try {
                const response = await fetch(`/UtilityBill/GetUtilityBillImage?utilityId=${hiddenInput.value}`);
                if (!response.ok) throw new Error('Failed to fetch image');

                const imageData = await response.json();

                previewBill(imageData.base64Image);

            } catch (error) {
                console.error('Error fetching bill image:', error);
                alert('Failed to load bill image');
            } finally {
                previewBtn.innerHTML = `Preview Image`;
