@section Scripts {
	<script>
        const previousValues = {};
        function preseveOriginal(){
             document.querySelectorAll('.utility-bill').forEach(billSection => {
                const inputs = billSection.querySelectorAll('input:not([type="hidden"])');
                inputs.forEach(input => {
                        previousValues[input.name] = input.value;
                });
             });
        }
        function calculateUnit() {
            function debounce(func, delay = 400) {
                let timeoutId;
                return (...args) => {
                    clearTimeout(timeoutId);
                    timeoutId = setTimeout(() => func(...args), delay);
                };
            }

            document.querySelectorAll('.utility-bill').forEach(billSection => {
                const toggle = billSection.querySelector('.utility-toggle');
                if (!toggle.checked) {
                    const consumedInput = billSection.querySelector('.utility-consumed');
                    const totalInput = billSection.querySelector('.utility-total');
                    const amountInput = billSection.querySelector('.utility-amount');
                    const selectBtn = billSection.querySelector('button[data-bs-toggle="modal"]');

                    if (consumedInput) consumedInput.setAttribute("readonly",true);
                    if (totalInput) totalInput.setAttribute("readonly",true);
                    if (amountInput) amountInput.setAttribute("readonly",true);
                    selectBtn.disabled = true;
                    return;
                }
                const unitIdElement = document.getElementById("UnitId");
                const invoiceIdElement = document.getElementById("Id");
                if (!unitIdElement) return;

                const unitId = unitIdElement.value;
                const invoiceId = invoiceIdElement.value;
                const typeId = billSection.dataset.utilityType;
                const totalUnitInput = billSection.querySelector('.utility-total');
                const consumedUnitInput = billSection.querySelector('.utility-consumed');


                if (!totalUnitInput || !consumedUnitInput) return;
                // Debounced handler
                const handleInput = debounce(async () => {
                    const totalUnit = parseFloat(totalUnitInput.value) || 0;
                    if(totalUnit === 0){
                        consumedUnitInput.value = '';
                        consumedUnitInput.removeAttribute("readOnly");
                        return;
                    }

                    try {
                        const response = await fetch(`/PaymentInvoice/GetTotalUnit?unitId=${unitId}&typeId=${typeId}&invoiceId=${invoiceId}`);
                        if (!response.ok) throw new Error("Network response was not ok");

                        const data = await response.json();
                        const previousTotal = parseFloat(data) || 0;

                        if(previousTotal === 0){
                            consumedUnitInput.removeAttribute("readonly");
                            consumedUnitInput.value = previousValues[consumedUnitInput.name];
                            return;
                        }
                        if(totalUnit <= previousTotal){
                        consumedUnitInput.value = previousValues[consumedUnitInput.name];
                        consumedUnitInput.removeAttribute("readonly");
                        }

                        else if (previousTotal !== 0) {
                            consumedUnitInput.setAttribute("readonly", true);
                            consumedUnitInput.value = totalUnit - previousTotal;
                        }
                    } catch (error) {
                        console.error("Error fetching total unit:", error);
                    }
                }, 400); // Adjust delay as needed (ms)

                totalUnitInput.addEventListener("input", handleInput);
                handleInput();
            });
        }

		// Calculate rent total
		function calculateRentTotal() {
			const from = new Date(document.getElementById("FromMonth").value);
			const to = new Date(document.getElementById("ToMonth").value);
			const amount = parseFloat(document.getElementById("AmountPerMonth").value);

			if (!isNaN(from) && !isNaN(to) && !isNaN(amount)) {
				const months = (to.getFullYear() - from.getFullYear()) * 12 + (to.getMonth() - from.getMonth());
				document.getElementById("TotalAmountDisplay").value = (months * amount).toFixed(2);
			}
			calculateGrandTotal();
		}
        async function isRecent() {
            const paymentDate = document.getElementById("FromMonth").value;
            const unitId = document.getElementById("UnitId").value;

            try {
                const response = await fetch(`/PaymentInvoice/IsLatestMonth?unitId=${unitId}&paymentDate=${paymentDate}`);
                if (!response.ok) throw new Error("Network response was not ok");
                const data = await response.json();
                return data === true; // returns true or false
            } catch (error) {
                console.error("Error fetching recent month:", error);
                return false;
            }
        }

        async function setupUtilityToggles() {
            const isTrue = await isRecent();

            document.querySelectorAll('.utility-toggle').forEach(toggle => {
                const billSection = toggle.closest('.utility-bill');
                const inputs = billSection.querySelectorAll('input:not(.utility-toggle):not([type="hidden"])');
                const selectBillButton = billSection.querySelector('button[data-bs-toggle="modal"]');

                if (!isTrue) {
                    toggle.disabled = true;
                    inputs.forEach(input => (input.setAttribute("readonly", true)));
                    return; // stop further setup for this toggle
                }

                inputs.forEach(input => {
                    if(!toggle.checked){
                        input.setAttribute("readonly",true);
                    }else{
                        input.removeAttribute("readonly");
                    }
                });

                toggle.addEventListener('change', function() {
                    const enabled = this.checked;
                    inputs.forEach(input => {
                        if(!enabled){
                            input.setAttribute("readonly",true);
                        }else{
                            input.removeAttribute("readonly");
                        }

                        if (!enabled && (input.classList.contains('utility-amount') ||
                                              input.classList.contains('utility-consumed') ||
                                              input.classList.contains('utility-total')
                        )) {
                            input.value = '';
                        } else if (enabled ) {
                            input.value = previousValues[input.name] || '';
                            calculateUnit();
                        }
                    });

                   if (selectBillButton) {
                        selectBillButton.disabled = !enabled;
                    }

                    calculateUtilitiesTotal();
                });

                billSection.querySelectorAll('.utility-amount').forEach(input => {
                    input.addEventListener('input', calculateUtilitiesTotal);
                });
            });

            calculateUtilitiesTotal();
        }

        function checkUtilityImage(){
            document.querySelectorAll('.utility-bill').forEach(billSection => {
            let hiddenInput = billSection.querySelector('input[name*="UtilityId"]');
            if (!hiddenInput || !hiddenInput.value) return;
            const existingPreviewBtn = billSection.querySelector('.selected-preview-btn');
            if (existingPreviewBtn) existingPreviewBtn.remove();

            const previewBtn = document.createElement('button');
            previewBtn.type = 'button';
            previewBtn.className = 'btn btn-sm selected-preview-btn mt-2 text-success fw-bold';
            previewBtn.innerHTML = `Preview Image`;
                    previewBtn.onclick = async function() {
            // Show loading state
            previewBtn.innerHTML = `<i class="bi bi-hourglass-split"></i> Loading...`;
            previewBtn.disabled = true;

            try {

                const response = await fetch(`/UtilityBill/GetUtilityBillImage?utilityId=${hiddenInput.value}`);
                if (!response.ok) throw new Error('Failed to fetch image');

                const imageData = await response.json();
                previewBill(imageData.base64Image);

            } catch (error) {
                console.error('Error fetching bill image:', error);
                alert('Failed to load bill image');
            } finally {
                previewBtn.innerHTML = `Preview Image`;
                previewBtn.disabled = false;
            }
        };

            const selectBtn = billSection.querySelector('button[data-bs-toggle="modal"]');
            if (!selectBtn) return;

            let removeBtn = billSection.querySelector('.remove-bill-btn');
            if (!removeBtn) {
                removeBtn = document.createElement('button');
                removeBtn.type = 'button';
                removeBtn.className = 'btn btn-danger ms-2 mt-2 remove-bill-btn';
                removeBtn.innerHTML = '<i class="bi bi-x-circle"></i> Remove Image';
                selectBtn.insertAdjacentElement('afterend', removeBtn);
            }

            removeBtn.style.display = 'inline-block';
            selectBtn.classList.remove('btn-primary');
            selectBtn.classList.add('btn-success');
            selectBtn.innerHTML = '<i class="bi bi-check-circle"></i> Image Selected';

            removeBtn.onclick = function () {
            resetBillImage();
            };

           function resetBillImage() {
            hiddenInput.value = '';
            let removeBtn = billSection.querySelector('.remove-bill-btn');
            if(removeBtn.style.display == 'none'){
                return;
            }
            removeBtn.style.display = 'none';

            selectBtn.classList.remove('btn-success');
