@using TenentManagement.Models.Authentication
@model TenentManagement.Models.User.UserModel
@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container py-5">
    <div class="card shadow-lg mx-auto rounded-corner" style="max-width: 600px;">


        <div class="card-header bg-primary text-white py-4 rounded-corner-top">
            <h1 class="h4 mb-0 text-center d-flex flex-column align-items-center">
                <span class="d-inline-flex align-items-center justify-content-center bg-opacity-25 bg-info text-white rounded-circle mb-2" style="width: 50px; height: 50px;">
                    <i class="fas fa-building fa-lg"></i>
                </span>
                <span>Tenent Management System</span>
                <span class="mt-2 mb-0 text-center">
                    <i class="bi bi-person-plus-fill me-2"></i>Edit User Info
                </span>
            </h1>
        </div>

        <div class="card-body p-4">
            <form asp-action="Edit" asp-controller="User" method="post" class="needs-validation" novalidate data-enable-spinner="true">
                <div class="row g-3">
					<input type="hidden" asp-for="Id" />
                    <div class="col-md-6">
                        <label asp-for="FirstName" class="form-label small text-muted">First Name *</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                            <input asp-for="FirstName" class="form-control" placeholder="John" required />
                        </div>
                        <span asp-validation-for="FirstName" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="LastName" class="form-label small text-muted">Last Name *</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                            <input asp-for="LastName" class="form-control" placeholder="Doe" required />
                        </div>
                        <span asp-validation-for="LastName" class="text-danger small"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="MiddleName" class="form-label small text-muted">Middle Name</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                            <input asp-for="MiddleName" class="form-control" placeholder="(Optional)" />
                        </div>
                    </div>


                    <div class="col-12">
                        <label asp-for="PhoneNumber" class="form-label small text-muted">Phone Number *</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-phone"></i></span>
                            <input asp-for="PhoneNumber" type="tel" class="form-control"
                                   placeholder="XXXX-XXXXXX"
                                   maxlength="11" />
                        </div>
                        <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                    </div>

            </div>


                    <div class="d-flex justify-content-between row mb-3 mt-4">
                        <button type="submit" class="btn btn-primary w-100 py-2 rounded-corner" data-loading-text="Registering...">
                            <i class="bi bi-person-plus-fill me-2"></i>Update User Profile
                        </button>
                    <a asp-action="Profile" asp-controller="User" class="btn btn-outline-secondary mt-2 rounded-corner">
                            <i class="bi bi-arrow-left me-2"></i>Back to Profile
                        </a>
                    </div>
            </form>
        </div>
    </div>
</div>
